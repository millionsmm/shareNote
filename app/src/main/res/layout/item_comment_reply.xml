<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvReplyUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_level6"
        android:layout_marginTop="@dimen/small_margin"
        android:drawableStart="@drawable/ic_reply_link"
        android:drawablePadding="@dimen/small_margin"
        android:layout_marginStart="32dp"
        android:text="回复人"
        android:drawableLeft="@drawable/ic_reply_link"
        android:layout_marginLeft="32dp"/>

    <TextView
        android:id="@+id/tvDian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_level4"
        android:layout_toEndOf="@id/tvReplyUser"
        android:layout_alignTop="@id/tvReplyUser"
        android:layout_alignBaseline="@+id/tvReplyUser"
        android:text="@string/maohao"
        android:layout_toRightOf="@id/tvReplyUser"/>

    <TextView
        android:id="@+id/tvReplyWho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_level4"
        android:layout_toEndOf="@id/tvDian"
        android:layout_alignTop="@id/tvDian"
        android:layout_alignBaseline="@+id/tvReplyUser"
        android:text="回复的谁"
        android:layout_toRightOf="@id/tvDian"/>

    <TextView
        android:id="@+id/tvReply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text_color_level_1_2"
        android:textSize="@dimen/text_size_level3"
        android:layout_below="@id/tvReplyUser"
        android:layout_marginStart="32dp"
        android:text="回复的内容。。。。。。。"
        android:layout_marginTop="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:layout_marginLeft="32dp"/>

    <View
        android:layout_below="@id/tvReply"
        android:layout_width="match_parent"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_height="0.3dp"
        android:background="@color/comment_line"/>
</RelativeLayout>